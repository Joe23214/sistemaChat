<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="chatTry">
        <createTable tableName="MESSAGE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_MESSAGE"/>
            </column>
            <column name="CONTENT" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="SENDER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="RECIVER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="SENT_AT" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="chatTry">
        <createIndex indexName="IDX_MESSAGE_RECIVER" tableName="MESSAGE">
            <column name="RECIVER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="RECIVER_ID" baseTableName="MESSAGE"
                                 constraintName="FK_MESSAGE_ON_RECIVER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="3" author="chatTry">
        <createIndex indexName="IDX_MESSAGE_SENDER" tableName="MESSAGE">
            <column name="SENDER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="SENDER_ID" baseTableName="MESSAGE"
                                 constraintName="FK_MESSAGE_ON_SENDER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>